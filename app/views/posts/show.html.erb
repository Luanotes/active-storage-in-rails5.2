<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Content:</strong>
  <%= @post.content %>
</p>

<p>
  <strong>Images:</strong>
</p>
<% if @post.images.attached? %>
  <% @post.images.each do |image| %>
    <%= image_tag image.variant(resize: "300x300")%>
  <% end %>
<% end %>

<p>
  <strong>Preview File:</strong>
</p>

<% if @post.file.blob.video? || @post.file.content_type.start_with?("application/pdf")%>
  <%= image_tag @post.file.preview(resize: "400x400")  %>
<% end %>

<p>
  <strong>Download File:</strong>
  <%= link_to 'Download', rails_blob_path(@post.file, disposition: "attachment") %>
</p>

<br>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
